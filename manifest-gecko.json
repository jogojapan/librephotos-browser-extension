{
  "manifest_version": 3,
  "name": "LibrePhotos Tools",
  "version": "1.1",
  "description": "Extension for a full-screen mode and other tools for LibrePhotos.",
  "permissions": ["activeTab", "contextMenus", "scripting", "storage"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "librephotos-browser-extension@chobycat.com"
    }
  },
  "options_ui": {
    "page": "options.html",
    "open_in_tab": false
  },
  "content_scripts": [],
  "action": {
    "default_title": "LibrePhotos Tools",
    "default_popup": ""
  }
}

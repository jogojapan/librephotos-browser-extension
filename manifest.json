{
  "manifest_version": 3,
  "name": "LibrePhotos Full-Screen Viewer",
  "version": "1.0G",
  "description": "Extension to view images in full-screen on LibrePhotos.",
  "permissions": ["activeTab", "contextMenus", "scripting"],
  "background": {
    "scripts": ["background.js"]
  },
  "content_scripts": [
    {
      "matches": ["https://tempsx.chobycat.com/*"],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "your-extension-id@chobycat.com",
      "strict_min_version": "109.0"
    }
  }
}
